<script>

    $(document).ready(function () {
        $('#navbarResponsive ul li a').click(function (ev) {
            $('#navbarResponsive ul li').removeClass('selected');
            $(ev.currentTarget).parent('li').addClass('selected');
        });
    });
</script>

